<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kiwi.redbox.redbox.fragments.NewWatchFragment"
    android:orientation="vertical"
    android:weightSum="1">


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showDatePickerDialog"
        android:text="Pick date"
        app:layout_constraintVertical_weight="0.2"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="35dp"
        android:layout_below="@+id/editTextPrize"
        android:layout_toEndOf="@+id/editTextPrize"
        android:layout_marginStart="98dp"
        android:layout_marginTop="17dp" />

    <TextView
        android:id="@+id/dateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button3"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="139dp"
        android:layout_marginTop="22dp"
        android:text="Not set"
        app:layout_constraintLeft_toRightOf="@+id/button"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="46dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pick demanded prize.."
        android:inputType="number"
        android:id="@+id/editTextPrize"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="createResultObject"
        android:text="Ok" />


</LinearLayout>

